.desktop-staking-list-screen {
	margin-bottom: 1rem;
	margin-top: 1rem;
	padding: 0 10%;
	padding-bottom: 42px;

	&__header {
		background: rgb(var(--rgb-body-background-color));
		border-radius: 10px;
		box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.15);
		padding-bottom: 1rem;
		padding-left: 15px;
		padding-top: 1rem;

		&__h3 {
			color: #fff;
			font-size: 35px;
			font-weight: 500;
			line-height: 41px;
			margin-bottom: 29px;
		}

		&__search {
			background: #11223f;
			border: 0.5px solid #848e9c;
			border-radius: 30px;
			box-sizing: border-box;
			display: flex;
			height: 45px;
			position: relative;
			width: 20rem;

			input {
				background: #11223f;
				border: none;
				border-radius: 50px;
				color: #fff;
				font-size: 16px;
				height: 100%;
				outline: none;
				padding-left: 2rem;
				width: 80%;
			}

			.icon-search {
				width: 20%;
			}

			::placeholder {
				color: rgba(196, 196, 196, 0.28);
			}

			svg {
				position: absolute;
				right: 5%;
				top: 30%;
			}
		}

		&__buttons {
			background: rgba(132, 142, 156, 0.35);
			border: 1px solid rgba(196, 196, 196, 0.28);
			border-radius: 30px;
			box-sizing: border-box;
			display: flex;
			flex-direction: row;
			width: 60%;

			&-btn {
				align-items: center;
				background-color: transparent;
				border: none;
				box-sizing: border-box;
				color: #fff;
				display: flex;
				font-size: 17px;
				font-weight: normal;
				justify-content: center;
				line-height: 20px;
				margin: 0;
				min-height: 45px;
				outline: none;
				padding: 3px 7px;
				text-align: center;
				transition: ease-in-out 0.1s;
				width: 25%;

				&:not(:first-child) {
					border-left: 1px solid rgba(196, 196, 196, 0.28);
				}
			}

			&__all {
				background: var(--yellow);
				border-bottom-left-radius: 30px;
				border-top-left-radius: 30px;
			}

			&__upcoming {
				background: #e06211;
			}

			&__running {
				background: #2fb67e;
			}

			&__ended {
				background-color: #bd3421;
				border-bottom-right-radius: 30px;
				border-top-right-radius: 30px;
			}
		}
	}

	&__body {
		border-radius: 10px;
		position: relative;

		&-loading {
			display: grid;
			height: 200px;
			left: 0;
			place-items: center;
			position: absolute;
			top: 0;
			width: 100%;
		}
	}
}

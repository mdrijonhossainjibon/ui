#cautions-detail-desktop {
	background: rgb(var(--rgb-subheader-background-color));
	border-radius: 5px;
	box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.15);
	margin-bottom: 2rem;
	margin-top: 1rem;

	.cautions-detail-title {
		color: #ffff;
		display: flex;
		justify-content: center;

		h3 {
			padding: 2.5rem;
		}
	}

	.describe {
		color: #fff;
		font-size: 13px;
		font-style: normal;
		font-weight: 500;
		line-height: 26px;
	}

	ul {
		padding-inline-start: 15px;
	}

	.noticeForRate {
		color: #ffff;
		font-style: normal;
		font-weight: 500;
		padding-bottom: 50px;

		h3 {
			color: #ffff;
			font-size: 18px;
			font-weight: bold;
			line-height: 26px;
			padding-inline-start: 0;
		}

		ul {
			font-size: 13px;
			line-height: 26px;
		}
	}
}

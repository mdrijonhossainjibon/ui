#pg-sign-in-screen {
	background-size: cover;
	display: flex;
	height: calc(100vh - 95px);
	justify-content: center;
	margin-top: 2rem;

	.pg-sign-in-screen__container {
		background: transparent;
		margin-top: 20px;
	}

	.cr-sign-in-form {
		background: var(--body-background-color);
		border-radius: 10px;
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.23);
		display: flex;
		flex-direction: column;
		height: calc(var(--big-gap) * 7.5);
		width: 480px;

		&__options-group {
			border-bottom: 2px solid var(--divider-color-level-2);
			border-radius: 10px;
			height: calc(var(--big-gap) * 0.97);
			width: 100%;
		}

		&__button-wrapper {
			bottom: calc(var(--gap) * 6.5);
			min-height: calc(var(--gap));
		}

		&__option {
			background: var(--subheader-background-color);
			border-radius: 10px;

			.__selected {
				border-bottom: 2px solid var(--primary-cta-color);
				color: var(--primary-text-color);
			}
		}

		&__title {
			background: transparent;
			font-size: calc(var(--gap) * 4);
			margin: calc(var(--gap) * 6.66) !important;
		}

		&__forgot {
			color: var(--secondary-contrast-cta-color);
			padding-top: calc(var(--gap) * 1.33);
		}

		&__error,
		&__error-message {
			color: var(--system-red);
		}

		&__footer {
			bottom: calc(var(--gap) * (-1.66));
			left: 0;
			position: absolute;
			right: 0;

			&-create {
				font-size: calc(var(--gap) * 2.33);
				font-weight: bolder;
			}

			&-register {
				font-size: calc(var(--gap) * 2.33);
				font-weight: bold;
			}
		}

		&__group--focused {
			.cr-sign-in-form__label {
				color: var(--input-legend-color-active);
			}

			input {
				border-color: var(--input-border-color-active) !important;
			}
		}
	}
}

@media screen and (max-width: 768px) {
	.pg-sign-in-screen {
		.pg-sign-in-screen__container {
			margin: calc(var(--gap) * 3.33) calc(var(--gap) * 1.66) 0;
			width: 100%;
		}

		.cr-sign-in-form {
			&__button {
				font-size: calc(var(--gap) * 2);
				margin-top: calc(var(--gap) * 4);
			}

			&__title {
				background: transparent;
				margin-top: calc(var(--gap) * 2);
			}
		}
	}
}

.group-wWM3zP_M- {
	background-color: var(--base-bright) !important;
}

.pg-trading-chart {
	background: transparent;
	height: 89%;
	left: 0;
	position: relative;
	top: 0;
	width: 100%;

	#cryptobase_chart {
		background: transparent;
		height: calc(100% - 39px);
	}

	.cr-title-component {
		padding: calc(var(--gap) * 2);
	}

	.sliderRow-Tv1W7hM5- {
		display: none !important;

		/* .item-3cgIlGYO- :hover {
			color: var(--trading-button-color) !important;
		} */
	}
}

.pg-trading-chart--error {
	align-items: center;
	background: rgba(255, 255, 255, 0.1);
	border: 1px solid white;
	color: var(--system-red);
	display: flex;
	font-size: 16px;
	justify-content: center;
}

@media screen and (max-width: 768px) {
	.pg-trading-chart {
		width: 100%;
	}
}

.title-text {
	color: white !important;
	font-size: 20px;
	font-weight: 500;
}

.pg-layout {
	background: var(--main-background-color);
	color: var(--secondary-contrast-cta-color);
	min-height: calc(100vh - 95px);
	padding-left: 0;
	padding-right: 0;
	padding-top: 2px;

	&--mobile {
		background: var(--main-background-color);
		max-width: 100vw;
		min-height: calc(100vh - 3.75em);
		min-width: 100vw;
		padding-bottom: 6em;
		padding-top: 0;
		width: 100vw;
	}
}

.trading-layout {
	background: var(--main-background-color);
}
